<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="../public/css/carrito.css">
  </head>
  <body>
    <header>
      <div class="container">
          <nav>
              <div class="logo"><img src="../public/img/logo.png"> <span><h1>ServiTools</h1></span></div>
          </nav>
      </div>
      <hr>
  </header>
    <!-- carrito.ejs -->
    
    <h1 class="d"><span> <a href="/productosClientes"><img src="../public/img/volver-azul.png" alt=""></a> </span>Productos</h1>
    

    <div class="container tabla">
      <% if (carrito && carrito.length === 0) { %>
        <p>No hay productos en el carrito</p>
      <% } else { %>
        <table class="table table-bordered table-striped text-center mt-4">
          <thead>
            <tr>
              <th>Producto</th>
              <th>Precio</th>
              <th>Cantidad</th>
            </tr>
          </thead>
          <tbody>
            <% carrito.forEach((producto) => { %>
              <tr>
                <td><%= producto.nombre %></td>
                <td>$<%= producto.precio %></td>
                <td><%= producto.cantidad %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } %>
    </div>
    <div class="botonMandar">
      <button type="submit">Enviar</button>
    </div>
    
    
    
    
    
  </body>
</html>
