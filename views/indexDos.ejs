                  <th scope="col">NOMBRE</th>
                  <th scope="col">STOCK</th>
                  <th scope="col">ACCIONES</th>
                </tr>
              </thead>
              <tbody>
                <% results.forEach((nombre)=>{ %>
                  <tr>
                    <td></td>
                    <td>
                      <%= nombre.id %>
                    </td>
                    <td>
                      <%= nombre.nombre %>
                    </td>
                    <td>
                      <%= nombre.stock %>
                    </td>
                    <td>
                      <!-- <button class="open__modal1"><img src="../public/img/editar.png" alt="editar"></button> -->
